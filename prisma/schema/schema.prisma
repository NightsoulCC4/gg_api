// prisma/schema.prisma

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id_user      Int    @id @default(autoincrement())
    username     String @unique
    password     String
    user_info_id Int

    user_info User_info @relation(fields: [user_info_id], references: [id_user_info])
}

model User_info {
    id_user_info Int    @id @default(autoincrement())
    firstname    String @unique
    lastname     String
    tel          String
    address      String @db.Text
    address_2    String @db.Text

    User         User[]
    Bank_account Bank_account[]
}

model Bank_name {
    bank_name_id Int    @id @default(autoincrement())
    description  String @unique

    Bank_account Bank_account[]
}

model Bank_account {
    bank_account_id Int @id @default(autoincrement())
    bank_no         Int @unique
    bank_type       Int
    user_info_id    Int

    bank_name Bank_name @relation(fields: [bank_type], references: [bank_name_id])
    user_info User_info @relation(fields: [user_info_id], references: [id_user_info])
}
